extends layout

block title
  h1= 'User Login'

block content
  form.messageForm(method="POST" action="/log-in")
    div.userNameDialog
      label User name:
      input(placeholder='enter username', type='text', name='username', value='', onchange='{handleChange}')
    div.messageDialog
      label Password:
      input(placeholder='enter password', type='text', name='password', value='', onchange='{handleChange}')
    .sendButton 
      input(type='submit', value='login')
